# MCU class and specific type
MCU STM32F4xx STM32F405xx

# crystal frequency
OSCILLATOR_HZ 8000000

# board ID for firmware load
APJ_BOARD_ID 1223

FLASH_RESERVE_START_KB 64

# flash size
FLASH_SIZE_KB 1024

env OPTIMIZE -O2

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART1 USART2 USART3 UART4 UART5
#USART6

# now we define the pins that USB is connected on
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

# these are the pins for SWD debugging with a STlinkv2 or black-magic probe
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# SPI1 - internal sensors
PA5 SPI1_SCK SPI1
PA6 SPI1_MISO SPI1
PA7 SPI1_MOSI SPI1

# SPI2 - FRAM
PB13 SPI2_SCK SPI2
PB14 SPI2_MISO SPI2
PB15 SPI2_MOSI SPI2

# SPI3 - sensors2
PB3 SPI3_SCK SPI3
PB4 SPI3_MISO SPI3
PB5 SPI3_MOSI SPI3

# sensor CS
PF10 MS5611_CS CS
PF2  ICM20689_CS CS SPEED_VERYLOW
PF3  ICM20602_CS CS SPEED_VERYLOW
PF4  BMI055_G_CS CS
PG10 BMI055_A_CS CS
PF5  FRAM_CS CS SPEED_VERYLOW

# unusued CS pins
PB12 FLASH_CS_PIN CS
PA4 MAX7456_SPI_CS_PIN CS
PC3 GYRO_1_EXTI_PIN CS
PA15 GYRO_1_CS_PIN CS

# I2C buses
PB8 I2C1_SCL I2C1 PULLUP
PB9 I2C1_SDA I2C1 PULLUP

# order of I2C buses
I2C_ORDER I2C1

define STM32_I2C_USE_DMA FALSE

# UARTs
# USART2 is telem1
PB7 USART1_RX USART1
PB6 USART1_TX USART1

# USART2
PA3 USART2_RX USART2 NODMA
PA2 USART2_TX USART2 NODMA

# USART3
PC11 USART3_RX USART3 NODMA
PC10 USART3_TX USART3 NODMA

# USART4
PA1 UART4_RX UART4 NODMA
PA0 UART4_TX UART4 NODMA

# USART5
PD2 UART5_RX UART5 NODMA
PC12 UART5_TX UART5 NODMA

# USART6
#PC7 USART6_RX USART6 NODMA
#PC6 USART6_TX USART6 NODMA

# PWM AUX channels
PA8  TIM1_CH1 TIM1 PWM(1) GPIO(50)
PA9  TIM1_CH2 TIM1 PWM(2) GPIO(51)
PA10 TIM1_CH3 TIM1 PWM(3) GPIO(52)
PC8  TIM3_CH3 TIM3 PWM(4) GPIO(53)

# RC input
PC7 TIM8_CH2 TIM8 RCININT PULLUP LOW

# analog in
PC1 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PC0 BATT_CURRENT_SENS ADC1 SCALE(1)

# SPI devices
SPIDEV imu1	        SPI3 DEVID1  GYRO_1_EXTI_PIN        MODE3  2*MHZ  8*MHZ
SPIDEV imu2	        SPI3 DEVID2  GYRO_1_CS_PIN         MODE3  2*MHZ  8*MHZ
SPIDEV osd          SPI1 DEVID4 MAX7456_SPI_CS_PIN   MODE0  10*MHZ  10*MHZ

# IMU1
IMU Invensense SPI:imu1 ROTATION_NONE
IMU Invensensev3 SPI:imu1 ROTATION_NONE

# IMU2
IMU Invensense SPI:imu2 ROTATION_NONE
IMU Invensensev3 SPI:imu2 ROTATION_NONE

BARO BMP280 I2C:0:0x76
BARO BMP280 I2C:0:0x77
define AP_BARO_BMP280_ENABLED 1

# setup for OSD
define OSD_ENABLED 1
define HAL_OSD_TYPE_DEFAULT 1

# red LED marked as B/E
PC15 LED_RED OUTPUT OPENDRAIN GPIO(90)

# blue LED marked as ACT
PC14 LED_BLUE OUTPUT GPIO(92) HIGH

# setup for BoardLED2
define HAL_GPIO_A_LED_PIN 90
define HAL_GPIO_B_LED_PIN 92
define HAL_GPIO_LED_ON 0


# enable RAMTROM parameter storage
define HAL_WITH_RAMTRON 0
define HAL_STORAGE_SIZE 15360
STORAGE_FLASH_PAGE 2


# enable FAT filesystem support (needs a microSD defined via SDMMC)
define HAL_OS_FATFS_IO 0

define HAL_NAVEKF2_AVAILABLE 1
define HAL_NAVEKF3_AVAILABLE 0

define AP_AIRSPEED_ENABLED 0
define HAL_BUTTON_ENABLED 0
define HAL_EFI_ENABLED 0
define AP_AHRS_EXTERNAL_ENABLED 0
define MODE_FOLLOW_ENABLED 0
define HAL_GENERATOR_ENABLED 0
define AP_ICENGINE_ENABLED 0
define HAL_VISUALODOM_ENABLED 0
define HAL_MSP_SENSORS_ENABLED 0
